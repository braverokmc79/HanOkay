<style type="text/css">
@keyframes ringbell{
    0.0%{
        transform: rotate(45deg);
    }
    100%{
        transform: rotate(45deg);
    }
    25.4%{
        transform: rotate(-45deg);
    }
    49.7%{
        transform: rotate(45deg);
    }
    74.7%{
        transform: rotate(-45deg);
    }
}

/* Add the animation: property to whichever element you want to animate */
.ringbell{
    animation: ringbell 0.5s ease 0s 2 normal none;
}
</style>
